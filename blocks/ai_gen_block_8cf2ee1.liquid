{% doc %}
  @prompt
    a multi column with icon section for a USP bar - sapce to add an icon / image with settings to choose the size and space for some text to sit next to it - up to 4 columns
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-usp-bar-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_vertical }}px {{ block.settings.padding_horizontal }}px;
  }

  .ai-usp-bar-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
  }

  .ai-usp-bar-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.column_gap }}px;
    align-items: center;
  }

  .ai-usp-bar-item-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.icon_text_gap }}px;
    justify-content: {{ block.settings.alignment }};
  }

  .ai-usp-bar-icon-wrapper-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-usp-bar-icon-wrapper-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .ai-usp-bar-icon-wrapper-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
  }

  .ai-usp-bar-text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.4;
    margin: 0;
  }

  @media screen and (max-width: 989px) {
    .ai-usp-bar-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_tablet }}, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-usp-bar-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.column_gap | times: 0.75 }}px;
    }

    .ai-usp-bar-icon-wrapper-{{ ai_gen_id }} {
      width: {{ block.settings.icon_size | times: 0.8 }}px;
      height: {{ block.settings.icon_size | times: 0.8 }}px;
    }

    .ai-usp-bar-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }

    .ai-usp-bar-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_vertical | times: 0.75 }}px {{ block.settings.padding_horizontal | times: 0.75 }}px;
    }
  }
{% endstyle %}

<div class="ai-usp-bar-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-usp-bar-container-{{ ai_gen_id }}">
    <div class="ai-usp-bar-grid-{{ ai_gen_id }}">
      {% for i in (1..4) %}
        {% liquid
          assign enabled_key = 'column_' | append: i | append: '_enabled'
          assign icon_key = 'column_' | append: i | append: '_icon'
          assign text_key = 'column_' | append: i | append: '_text'
          
          assign enabled = block.settings[enabled_key]
          assign icon = block.settings[icon_key]
          assign text = block.settings[text_key]
        %}

        {% if enabled %}
          <div class="ai-usp-bar-item-{{ ai_gen_id }}">
            <div class="ai-usp-bar-icon-wrapper-{{ ai_gen_id }}">
              {% if icon != blank %}
                <img
                  src="{{ icon | image_url: width: 200 }}"
                  alt="{{ text | escape }}"
                  loading="lazy"
                  width="200"
                  height="200"
                >
              {% else %}
                {{ 'image' | placeholder_svg_tag }}
              {% endif %}
            </div>
            {% if text != blank %}
              <p class="ai-usp-bar-text-{{ ai_gen_id }}">{{ text }}</p>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

