{% doc %}
  @prompt
    I will need a bread crumb trail but please include this logic...
    
    {% elsif template.name == 'product' and product %}
      {% assign current_collection = collection %}
      {% if current_collection == nil and product.collections.size > 0 %}
        {% assign current_collection = product.collections.first %}
      {% endif %}
    
      {% if current_collection %}
        <li class="ai-breadcrumb-item-{{ ai_gen_id }}">
          <span class="ai-breadcrumb-separator-{{ ai_gen_id }}" aria-hidden="true">{{ block.settings.separator }}</span>
          <a href="{{ current_collection.url }}" class="ai-breadcrumb-link-{{ ai_gen_id }}">{{ current_collection.title }}</a>
        </li>
      {% endif %}
    
      <li class="ai-breadcrumb-item-{{ ai_gen_id }}">
        <span class="ai-breadcrumb-separator-{{ ai_gen_id }}" aria-hidden="true">{{ block.settings.separator }}</span>
        <span class="ai-breadcrumb-current-{{ ai_gen_id }}" aria-current="page">{{ product.title }}</span>
      </li>
    {% endif %}
    
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-breadcrumb-container-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-breadcrumb-wrapper-{{ ai_gen_id }} {
    max-width: {{ settings.page_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-breadcrumb-list-{{ ai_gen_id }} {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: {{ block.settings.item_spacing }}px;
  }

  .ai-breadcrumb-item-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.item_spacing }}px;
  }

  .ai-breadcrumb-item-{{ ai_gen_id }}:first-child .ai-breadcrumb-separator-{{ ai_gen_id }} {
    display: none;
  }

  .ai-breadcrumb-link-{{ ai_gen_id }},
  .ai-breadcrumb-current-{{ ai_gen_id }} {
    font-size: {{ block.settings.font_size }}px;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .ai-breadcrumb-link-{{ ai_gen_id }} {
    color: {{ block.settings.link_color }};
  }

  .ai-breadcrumb-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.link_hover_color }};
    text-decoration: underline;
  }

  .ai-breadcrumb-current-{{ ai_gen_id }} {
    color: {{ block.settings.current_color }};
  }

  .ai-breadcrumb-separator-{{ ai_gen_id }} {
    color: {{ block.settings.separator_color }};
    font-size: {{ block.settings.font_size }}px;
  }

  @media screen and (max-width: 749px) {
    .ai-breadcrumb-container-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.7 }}px 0 {{ block.settings.padding_bottom | times: 0.7 }}px;
    }

    .ai-breadcrumb-link-{{ ai_gen_id }},
    .ai-breadcrumb-current-{{ ai_gen_id }},
    .ai-breadcrumb-separator-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<nav class="ai-breadcrumb-container-{{ ai_gen_id }}" aria-label="Breadcrumb" {{ block.shopify_attributes }}>
  <div class="ai-breadcrumb-wrapper-{{ ai_gen_id }}">
    <ol class="ai-breadcrumb-list-{{ ai_gen_id }}">
      <li class="ai-breadcrumb-item-{{ ai_gen_id }}">
        <a href="{{ routes.root_url }}" class="ai-breadcrumb-link-{{ ai_gen_id }}">{{ block.settings.home_text }}</a>
      </li>

      {% if template.name == 'collection' and collection %}
        <li class="ai-breadcrumb-item-{{ ai_gen_id }}">
          <span class="ai-breadcrumb-separator-{{ ai_gen_id }}" aria-hidden="true">{{ block.settings.separator }}</span>
          <span class="ai-breadcrumb-current-{{ ai_gen_id }}" aria-current="page">{{ collection.title }}</span>
        </li>

      {% elsif template.name == 'product' and product %}
        {% assign current_collection = collection %}
        {% if current_collection == nil and product.collections.size > 0 %}
          {% assign current_collection = product.collections.first %}
        {% endif %}

        {% if current_collection %}
          <li class="ai-breadcrumb-item-{{ ai_gen_id }}">
            <span class="ai-breadcrumb-separator-{{ ai_gen_id }}" aria-hidden="true">{{ block.settings.separator }}</span>
            <a href="{{ current_collection.url }}" class="ai-breadcrumb-link-{{ ai_gen_id }}">{{ current_collection.title }}</a>
          </li>
        {% endif %}

        <li class="ai-breadcrumb-item-{{ ai_gen_id }}">
          <span class="ai-breadcrumb-separator-{{ ai_gen_id }}" aria-hidden="true">{{ block.settings.separator }}</span>
          <span class="ai-breadcrumb-current-{{ ai_gen_id }}" aria-current="page">{{ product.title }}</span>
        </li>

      {% elsif template.name == 'page' and page %}
        <li class="ai-breadcrumb-item-{{ ai_gen_id }}">
          <span class="ai-breadcrumb-separator-{{ ai_gen_id }}" aria-hidden="true">{{ block.settings.separator }}</span>
          <span class="ai-breadcrumb-current-{{ ai_gen_id }}" aria-current="page">{{ page.title }}</span>
        </li>

      {% elsif template.name == 'blog' and blog %}
        <li class="ai-breadcrumb-item-{{ ai_gen_id }}">
          <span class="ai-breadcrumb-separator-{{ ai_gen_id }}" aria-hidden="true">{{ block.settings.separator }}</span>
          <span class="ai-breadcrumb-current-{{ ai_gen_id }}" aria-current="page">{{ blog.title }}</span>
        </li>

      {% elsif template.name == 'article' and article %}
        <li class="ai-breadcrumb-item-{{ ai_gen_id }}">
          <span class="ai-breadcrumb-separator-{{ ai_gen_id }}" aria-hidden="true">{{ block.settings.separator }}</span>
          <a href="{{ blog.url }}" class="ai-breadcrumb-link-{{ ai_gen_id }}">{{ blog.title }}</a>
        </li>
        <li class="ai-breadcrumb-item-{{ ai_gen_id }}">
          <span class="ai-breadcrumb-separator-{{ ai_gen_id }}" aria-hidden="true">{{ block.settings.separator }}</span>
          <span class="ai-breadcrumb-current-{{ ai_gen_id }}" aria-current="page">{{ article.title }}</span>
        </li>

      {% elsif template.name == 'search' %}
        <li class="ai-breadcrumb-item-{{ ai_gen_id }}">
          <span class="ai-breadcrumb-separator-{{ ai_gen_id }}" aria-hidden="true">{{ block.settings.separator }}</span>
          <span class="ai-breadcrumb-current-{{ ai_gen_id }}" aria-current="page">{{ block.settings.search_text }}</span>
        </li>

      {% elsif template.name == 'cart' %}
        <li class="ai-breadcrumb-item-{{ ai_gen_id }}">
          <span class="ai-breadcrumb-separator-{{ ai_gen_id }}" aria-hidden="true">{{ block.settings.separator }}</span>
          <span class="ai-breadcrumb-current-{{ ai_gen_id }}" aria-current="page">{{ block.settings.cart_text }}</span>
        </li>

      {% elsif template.name == 'list-collections' %}
        <li class="ai-breadcrumb-item-{{ ai_gen_id }}">
          <span class="ai-breadcrumb-separator-{{ ai_gen_id }}" aria-hidden="true">{{ block.settings.separator }}</span>
          <span class="ai-breadcrumb-current-{{ ai_gen_id }}" aria-current="page">{{ block.settings.collections_text }}</span>
        </li>

      {% elsif template.name == '404' %}
        <li class="ai-breadcrumb-item-{{ ai_gen_id }}">
          <span class="ai-breadcrumb-separator-{{ ai_gen_id }}" aria-hidden="true">{{ block.settings.separator }}</span>
          <span class="ai-breadcrumb-current-{{ ai_gen_id }}" aria-current="page">{{ block.settings.not_found_text }}</span>
        </li>

      {% endif %}
    </ol>
  </div>
</nav>

