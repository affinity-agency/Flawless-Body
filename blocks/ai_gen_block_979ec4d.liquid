{% doc %}
  @prompt
    bread crumb, can we add the collection to the bread crumb trail
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-breadcrumb-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-breadcrumb-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-breadcrumb-list-{{ ai_gen_id }} {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: {{ block.settings.item_spacing }}px;
    font-size: {{ block.settings.font_size }}px;
  }

  .ai-breadcrumb-item-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.item_spacing }}px;
  }

  .ai-breadcrumb-link-{{ ai_gen_id }} {
    color: {{ block.settings.link_color }};
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .ai-breadcrumb-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.link_hover_color }};
    text-decoration: underline;
  }

  .ai-breadcrumb-separator-{{ ai_gen_id }} {
    color: {{ block.settings.separator_color }};
    user-select: none;
  }

  .ai-breadcrumb-current-{{ ai_gen_id }} {
    color: {{ block.settings.current_color }};
  }

  .ai-breadcrumb-home-icon-{{ ai_gen_id }} {
    width: {{ block.settings.font_size }}px;
    height: {{ block.settings.font_size }}px;
    display: inline-block;
    vertical-align: middle;
  }

  .ai-breadcrumb-home-icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    fill: currentColor;
  }

  @media screen and (max-width: 749px) {
    .ai-breadcrumb-list-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<nav class="ai-breadcrumb-{{ ai_gen_id }}" aria-label="Breadcrumb" {{ block.shopify_attributes }}>
  <div class="ai-breadcrumb-container-{{ ai_gen_id }}">
    <ol class="ai-breadcrumb-list-{{ ai_gen_id }}">
      <li class="ai-breadcrumb-item-{{ ai_gen_id }}">
        <a href="/" class="ai-breadcrumb-link-{{ ai_gen_id }}" aria-label="Home">
          {% if block.settings.show_home_icon %}
            <span class="ai-breadcrumb-home-icon-{{ ai_gen_id }}">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                <polyline points="9 22 9 12 15 12 15 22"></polyline>
              </svg>
            </span>
          {% else %}
            {{ block.settings.home_text }}
          {% endif %}
        </a>
      </li>

      {% if template.name == 'collection' and collection %}
        <li class="ai-breadcrumb-item-{{ ai_gen_id }}">
          <span class="ai-breadcrumb-separator-{{ ai_gen_id }}" aria-hidden="true">{{ block.settings.separator }}</span>
          <span class="ai-breadcrumb-current-{{ ai_gen_id }}" aria-current="page">{{ collection.title }}</span>
        </li>
      {% elsif template.name == 'product' and product %}
        {% if collection %}
          <li class="ai-breadcrumb-item-{{ ai_gen_id }}">
            <span class="ai-breadcrumb-separator-{{ ai_gen_id }}" aria-hidden="true">{{ block.settings.separator }}</span>
            <a href="{{ collection.url }}" class="ai-breadcrumb-link-{{ ai_gen_id }}">{{ collection.title }}</a>
          </li>
          <li class="ai-breadcrumb-item-{{ ai_gen_id }}">
            <span class="ai-breadcrumb-separator-{{ ai_gen_id }}" aria-hidden="true">{{ block.settings.separator }}</span>
            <span class="ai-breadcrumb-current-{{ ai_gen_id }}" aria-current="page">{{ product.title }}</span>
          </li>
        {% elsif product.collections.size > 0 %}
          <li class="ai-breadcrumb-item-{{ ai_gen_id }}">
            <span class="ai-breadcrumb-separator-{{ ai_gen_id }}" aria-hidden="true">{{ block.settings.separator }}</span>
            <a href="{{ product.collections.first.url }}" class="ai-breadcrumb-link-{{ ai_gen_id }}">{{ product.collections.first.title }}</a>
          </li>
          <li class="ai-breadcrumb-item-{{ ai_gen_id }}">
            <span class="ai-breadcrumb-separator-{{ ai_gen_id }}" aria-hidden="true">{{ block.settings.separator }}</span>
            <span class="ai-breadcrumb-current-{{ ai_gen_id }}" aria-current="page">{{ product.title }}</span>
          </li>
        {% else %}
          <li class="ai-breadcrumb-item-{{ ai_gen_id }}">
            <span class="ai-breadcrumb-separator-{{ ai_gen_id }}" aria-hidden="true">{{ block.settings.separator }}</span>
            <span class="ai-breadcrumb-current-{{ ai_gen_id }}" aria-current="page">{{ product.title }}</span>
          </li>
        {% endif %}
      {% elsif template.name == 'page' and page %}
        <li class="ai-breadcrumb-item-{{ ai_gen_id }}">
          <span class="ai-breadcrumb-separator-{{ ai_gen_id }}" aria-hidden="true">{{ block.settings.separator }}</span>
          <span class="ai-breadcrumb-current-{{ ai_gen_id }}" aria-current="page">{{ page.title }}</span>
        </li>
      {% elsif template.name == 'blog' and blog %}
        <li class="ai-breadcrumb-item-{{ ai_gen_id }}">
          <span class="ai-breadcrumb-separator-{{ ai_gen_id }}" aria-hidden="true">{{ block.settings.separator }}</span>
          <span class="ai-breadcrumb-current-{{ ai_gen_id }}" aria-current="page">{{ blog.title }}</span>
        </li>
      {% elsif template.name == 'article' and article %}
        <li class="ai-breadcrumb-item-{{ ai_gen_id }}">
          <span class="ai-breadcrumb-separator-{{ ai_gen_id }}" aria-hidden="true">{{ block.settings.separator }}</span>
          <a href="{{ blog.url }}" class="ai-breadcrumb-link-{{ ai_gen_id }}">{{ blog.title }}</a>
        </li>
        <li class="ai-breadcrumb-item-{{ ai_gen_id }}">
          <span class="ai-breadcrumb-separator-{{ ai_gen_id }}" aria-hidden="true">{{ block.settings.separator }}</span>
          <span class="ai-breadcrumb-current-{{ ai_gen_id }}" aria-current="page">{{ article.title }}</span>
        </li>
      {% elsif template.name == 'search' %}
        <li class="ai-breadcrumb-item-{{ ai_gen_id }}">
          <span class="ai-breadcrumb-separator-{{ ai_gen_id }}" aria-hidden="true">{{ block.settings.separator }}</span>
          <span class="ai-breadcrumb-current-{{ ai_gen_id }}" aria-current="page">Search</span>
        </li>
      {% elsif template.name == 'cart' %}
        <li class="ai-breadcrumb-item-{{ ai_gen_id }}">
          <span class="ai-breadcrumb-separator-{{ ai_gen_id }}" aria-hidden="true">{{ block.settings.separator }}</span>
          <span class="ai-breadcrumb-current-{{ ai_gen_id }}" aria-current="page">Cart</span>
        </li>
      {% elsif template.name == 'list-collections' %}
        <li class="ai-breadcrumb-item-{{ ai_gen_id }}">
          <span class="ai-breadcrumb-separator-{{ ai_gen_id }}" aria-hidden="true">{{ block.settings.separator }}</span>
          <span class="ai-breadcrumb-current-{{ ai_gen_id }}" aria-current="page">Collections</span>
        </li>
      {% elsif template.name == 'account' %}
        <li class="ai-breadcrumb-item-{{ ai_gen_id }}">
          <span class="ai-breadcrumb-separator-{{ ai_gen_id }}" aria-hidden="true">{{ block.settings.separator }}</span>
          <span class="ai-breadcrumb-current-{{ ai_gen_id }}" aria-current="page">Account</span>
        </li>
      {% endif %}
    </ol>
  </div>
</nav>

